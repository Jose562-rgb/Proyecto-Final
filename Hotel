int opcion;
int x,n, total;
 struct reservacion{ 
	                                               
    string nombre;
  	int numHabitacion;
};

void MostrarPrecios()
{
			system("cls");
			cout<<"\n MOSTRANDO PRECIOS  "<<endl;
	
			int habitacion;
			
			cout<<"\n Le ofrecemos las siguientes opciones: \n "<<endl;
